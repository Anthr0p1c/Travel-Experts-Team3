extends layout 
block content

  doctype html
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Travel Expert Contact Us
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
    // My CSS
    //link(href='/css/main.css' rel='stylesheet')
    //link(href='/css/contact.css' rel='stylesheet')
    style.
      .container img {
      float: left;
      width: 24px;
      height: 27px;
      object-fit: cover;
      }
      .container-fluid {
      //background-color: #b2bdbd;
      }
  br
  .container
    center
      br
      br
      
      if agencies
      - var i=0
      
      each ageny in agencies

        .card.border-info.mb-3(style='max-width: 18rem;')
        if i==0
          .card-header.fontclass Head Office -Calgary
          - i= i+1
        else 
          .card-header.fontclass Branch Office - Okatokes
        .card-body.text-info
          h5.card-title Address
          p.card-text.text-info #{ageny.AgncyAddress}, #{ageny.AgncyProv}, #{ageny.AgncyPostal}, #{ageny.AgncyCountry}                 
    
            section
              
                // <center>
                table.text-info(width='100%' border='1' style='border-color: rgb(185, 200, 228);')
                  tr
                    td(colspan='3') &#xF4DE;#{ageny.AgncyPhone}
                  tr
                    td
                      | &#xF5B7;&nbsp;#{ageny.AgncyFax}
                  tr
                    td
                      | &#x2709;
                      a(href='mailto:webmaster@travelexpert.com') #{ageny.AgencyEmail}
                  tr
                    td
                      img(src='/img/Facebook.jpg' alt='facebook')
                      a(href='http://facebook.com' title='Facebook') Like Us on Facebook!
  .row
    .col
      .card.h-100
        .card-body.card-text.info.mb-3
          h5.card-text.info.mb-3
            b Agent Contacts
          //
            <p class="card-text">This is a longer card with supporting text below as a natural lead-in to
            additional content. This content is a little bit longer.</p>
          if agentcalgary
            p
            font(color='red')
              b Calgary Agents
            each agent in agentcalgary
              
              ul(type='round')
              li Agent Name: #{agent.AgtFirstName} #{agent.AgtLastName}
                ul(type='square')
                li Phone: #{agent.AgtBusPhone}
                li
                  | Email: 
                  a(href='mailto:webmaster@travelexpert.com') #{agent.AgtEmail}
            br
          agentcalgary=null


          if agentokotos
            p
            font(color='red')
              b Okotas Agents
            
            each agent in agentokotos
              ul(type='round')
              li Agent Name: #{agent.AgtFirstName} #{agent.AgtLastName}
                ul(type='square')
                li Phone: #{agent.AgtBusPhone}
                li
                  | Email: 
                  a(href='mailto:webmaster@travelexpert.com') #{agent.AgtEmail}
            br
          agentokotos=null  

            
    .col
      .card.h-100
        .card-body
          p.card-text.fontclasswhite Send Us Your Message.
          fieldset(style='position:relative;border: 0px;')          
            form#f1(name='contactuser' method='post' action='/contact/createmessage')
              table.fontclasswhite.column(border='0')
                tr
                  td
                    label First Name* :
                  td
                    input(type='text' name='firstname' required='true' value=postdata && postdata.firstname)
                tr
                  td(style='width: 30px;')
                    label Last Name:
                  td
                    input(type='text' name='lastname'  value=postdata && postdata.lastname)
                tr
                  td(style='width: 30px;')
                    label Email Address* :
                  td
                    input(type='email' name='email' required='true' value=postdata && postdata.email)
                tr
                  td(style='width: 30px;')
                    label Message:
                  td
                    textarea#subject(name='message' style='width:150%;height: 100px;')=postdata && postdata.message
                tr
                  td
                    input(type='submit' name='butSubmit' value='SEND')
                  td
                
          if errors
            ul
              each error in errors
                li.alert.alert-danger.m3= error

                  
    div(style='clear: both;')
    br
    a(href='/') Home

    section
      div
        footer.footc
          | &copy; Copyright
          | 2021,
          | TravelExpert.com
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM' crossorigin='anonymous')
